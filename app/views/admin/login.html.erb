<% form_tag do %>
	<fieldset>
		<legend>Please log in</legend>
		
		<div>
			<label for="myid">Name:</label>
			<%= text_field_tag :myid, params[:myid] %>
		</div>
		
		<div>
			<label for="password">Password:</label>
			<%= password_field_tag :password, params[:password] %>
		</div>
		
		<div>
			<%= submit_tag "login" %>
		</div>
	</fieldset>
<%end%>
		