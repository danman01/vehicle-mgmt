<%=link_to "Return to Admin page", "/admin_view"%>


<h1>Listing vehicles</h1>

<table>
  <tr>
    <th>Vehicleid</th>
    <th>Year made</th>
    <th>Make</th>
    <th>Model</th>
    <th>Owner</th>
    <th>Alias</th>
    <th>Image url</th>
    <th>Checked out</th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%=h vehicle.vehicleID %></td>
    <td><%=h vehicle.year_made %></td>
    <td><%=h vehicle.make %></td>
    <td><%=h vehicle.model %></td>
    <td><%=h vehicle.owner %></td>
    <td><%=h vehicle.alias %></td>
    <td><%=h vehicle.image_url %></td>
    <td><%if vehicle.checked_out == 0 %>No <%else%>Yes<%end%></td>
	<td><%=# if vehicle.checked_out == 0
          #link_to 'Check out vehicle', :controller => "vehicles",
          #  :action => "check_out", :id => vehicle.id
        #else
        #  link_to 'Check in vehicle', :controller => "vehicles",
        #    :action => "check_in", :id => vehicle.id
       # end 
		%></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

