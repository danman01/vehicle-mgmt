<%=link_to "Return to User Index", "/users"%>

<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :myid %><br />
    <%= f.text_field :myid %>
  </p>
  <p>
    <%= f.label :user_fname %><br />
    <%= f.text_field :user_fname %>
  </p>
  <p>
    <%= f.label :user_lname %><br />
    <%= f.text_field :user_lname %>
  </p>
  <p>
    <%= f.label :user_email %><br />
    <%= f.text_field :user_email %>
  </p>
  <p>
    <%= f.label :role, "Admin rights?" %><br />
    <%= f.check_box(:role, {},"admin", "user")
	 %>
  </p>
  <p>
    	<%=
			f.select :user_group,
						Group.find(:all).collect{ |g| [g.name, g.name]},
						:prompt => 'Select a User Group'
		%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>