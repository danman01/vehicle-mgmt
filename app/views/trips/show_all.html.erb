
	<div id="all-trips">
			<h1>Listing All trips</h1>

			<table>
			  <tr>
			    <th>Trip</th>
			    <th>Vehicle</th>
			    <th>Destination name</th>
			    <th>Myid</th>
			    <th>Check out time</th>
			    <th>Check in time</th>
				<th>Notes</th>
			  </tr>

			<% @trips.each do |trip| %>
			  <tr>
			    <td><%= link_to trip.trip_id, trip %></td>
			    <td><%=h trip.vehicle_id %></td>
			    <td><%=h trip.destination_name %></td>
			    <td><%=h trip.myid %></td>
			<%if trip.check_out_time !=nil%>
			    <td><%=h trip.check_out_time.strftime("%a, %b %e at %l:%M %p") %></td>
			<%end%>
			<%if trip.check_in_time !=nil%>
			    <td><%=h trip.check_in_time.strftime("%a, %b %e at %l:%M %p") %></td>
			<%end%>
			<%if trip.comments !=nil%>
			    <td title=<%=trip.comments%>><%=link_to 'Notes',trip %></td>
			<%end%>

			    <td><%= link_to 'Edit', edit_trip_path(trip), :id=>trip.vehicle_id %></td>
			    <td><%= link_to 'Destroy', trip, :confirm => 'Are you sure?', :method => :delete %></td>
			  </tr>
			<% end %>
			</table>

			<br />
			<%= will_paginate @trips %>
			<%= link_to 'New trip', new_trip_path %>
			</div>

